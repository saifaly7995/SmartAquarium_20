<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/btnred"
                android:layout_width="72dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#d50000">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:text="R"
                    android:textColor="#fff"
                    android:textSize="42sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btngreen"
                android:layout_width="72dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#003300">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:text="G"
                    android:textColor="#fff"
                    android:textSize="42sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btnblue"
                android:layout_width="72dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#002171">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:text="B"
                    android:textColor="#fff"
                    android:textSize="42sp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/btnwhite"
                android:layout_width="72dp"
                android:layout_height="90dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp"
                android:elevation="20dp"
                app:cardBackgroundColor="#fff"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lato"
                    android:text="W"
                    android:textColor="#000"
                    android:textSize="42sp" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:elevation="20dp"
            android:layout_margin="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/btndeeporange"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#ff3d00">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:textColor="#fff"
                            android:text="Deep"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="O"
                            android:textColor="#fff"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnlightgreen"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#64dd17">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:textColor="#fff"
                            android:text="Light"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="G"
                            android:textColor="#fff"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnlightblue"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#0091ea">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:textColor="#fff"
                            android:text="Light"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="B"
                            android:textColor="#fff"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/btnorange"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#ff6d00">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="O"
                            android:textColor="#fff"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btncyan"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#18ffff">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="C"
                            android:textColor="#000"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnmargenda"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#880e4f">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="M"
                            android:textColor="#fff"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/btnyellow"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#ffd600">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="Y"
                            android:textColor="#000"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnlightb"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#80d8ff">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:textColor="#000"
                            android:text="Light"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="B"
                            android:textColor="#000"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnpink"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#ec407a">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="P"
                            android:textColor="#fff"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/btnlime"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#eeff41">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="L"
                            android:textColor="#000"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnseagreen"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#00838f">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato"
                            android:textColor="#fff"
                            android:text="Sea"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="G"
                            android:textColor="#fff"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/btnbluee"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#002171">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="B"
                            android:textColor="#fff"
                            android:textSize="42sp" />
                    </android.support.v7.widget.CardView>


                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            app:elevation="20dp"
            android:background="#d3d3d3"
            android:layout_margin="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/btnflash"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#a9a9a9">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="FLASH"
                            android:textColor="#000"
                            android:textSize="18sp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/btnstrobe"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#a9a9a9">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="STROBE"
                            android:textColor="#000"
                            android:textSize="18sp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/btnfade"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#a9a9a9">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="FADE"
                            android:textColor="#000"
                            android:textSize="18sp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <android.support.v7.widget.CardView
                        android:id="@+id/btnsmooth"
                        android:layout_width="72dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="6dp"
                        android:elevation="20dp"
                        app:cardBackgroundColor="#a9a9a9">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lato"
                            android:text="SMOOTH"
                            android:textColor="#000"
                            android:textSize="16sp" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
