                        <!--android:text="LED Color"-->
                        <!--android:textColor="@color/colorFonts"/>-->
                <!--</LinearLayout>-->



            <!--</android.support.v7.widget.CardView>-->

        </GridLayout>

    </LinearLayout>

</ScrollView>